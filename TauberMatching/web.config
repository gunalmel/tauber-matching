    <add key="IsTesting" value="false" />
    <add key="ProjectAccessUrlSubject" value="Tauber Matching Application - Url to rank students" />
    <add key="StudentAccessUrlSubject" value="Tauber Matching Application - Url to rank projects" />
    <add key="ProjectAccessUrlBody" value="To rank Tauber Institute students for your project, please follow this link: &lt;a href=&quot;{0}&quot;&gt;{0}&lt;/a&gt;" />
    <add key="StudentAccessUrlBody" value="To access Tauber Matching Web Application and rank projects, please follow this link: &lt;a href=&quot;{0}&quot;&gt;{0}&lt;/a&gt;" />
