  </configSections>
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net">
        <arg key="configType" value="INLINE" />
        <!--<arg key="level" value="NONE" />-->
      </factoryAdapter>
    </logging>
  </common>
  <appSettings>
    <add key="log4net.Config" value="log4net.config" />
    <add key="log4net.Config.Watch" value="True" />
    <!--<add key="MailServer" value="smtp.gmail.com" />
    <add key="MailServerPort" value="587" />
    <add key="SSLEnabled" value="true" />
    <add key="IsMailBodyHtml" value="true" />
    <add key="MailAccount" value="gunalmel@gmail.com" />
    <add key="MailPassword" value="smooth1022" />
    <add key="MailPickupDirectory" value="AppData/uploads" />
